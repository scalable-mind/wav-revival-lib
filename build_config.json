{
  "build": {
    "Debug": {
      "buildDir": "cmake-build-debug",
      "cmakeBuildType": "-DCMAKE_BUILD_TYPE=Debug"
    },
    "Release": {
      "buildDir": "cmake-build-release",
      "cmakeBuildType": "-DCMAKE_BUILD_TYPE=Release"
    },
    "arch": {
      "x64": "-arch=x64",
      "x86": "-arch=x86"
    },
    "conan": {
      "msvc": [
        [
          "conan",
          "install",
          ".",
          "-s",
          "build_type=Debug",
          "--install-folder=cmake-build-debug",
          "-s",
          "compiler=Visual Studio"
        ],
        [
          "conan",
          "install",
          ".",
          "-s",
          "build_type=Release",
          "--install-folder=cmake-build-release",
          "-s",
          "compiler=Visual Studio"
        ]
      ],
      "gcc": [
        [
          "conan",
          "install",
          ".",
          "-s",
          "build_type=Debug",
          "--install-folder=cmake-build-debug",
          "-s",
          "compiler=gcc"
        ],
        [
          "conan",
          "install",
          ".",
          "-s",
          "build_type=Release",
          "--install-folder=cmake-build-release",
          "-s",
          "compiler=gcc"
        ]
      ]
    },
    "commands": {
      "msvc": [
        "cmd",
        "/c",
        "C:/Program Files (x86)/Microsoft Visual Studio/2017/Community/Common7/Tools/VsDevCmd.bat"
      ],
      "cmakeConf": [
        "cmake",
        "-G",
        "Ninja",
        ".."
      ],
      "cmakeBuild": [
        "cmake",
        "--build",
        ".",
        "--target"
      ]
    }
  }
}
